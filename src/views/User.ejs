<% title="User" %>
    <% include partials/header %>
        <div class="container-fluid ">
            <div class="row " style="margin-top: 10px; ">
                <div class="col-12">
                    <svg style="height: 50px; background-color: #111;" class=textanimate viewBox="0 0 600 100"><!-- Symbol--><symbol id="s-text"><text text-anchor="middle" x="50%" y="50%" dy=".35em">simon dice</text></symbol><!-- Duplicate symbols--><use class="text" xlink:href="#s-text"></use><use class="text" xlink:href="#s-text"></use><use class="text" xlink:href="#s-text"></use><use class="text" xlink:href="#s-text"></use><use class="text" xlink:href="#s-text"></use></svg>
                </div>
            </div>
        </div>
        <div class="container mt-1" style="margin-bottom: 60px;">
            <form id='formuser' class="row text-center" method="POST" action="/singup">
                <div class="form-group col-12 col-md-6">
                    <label for="usuario">Usuario</label>
                    <input type="text" value="<%=userval.user%>" required class="form-control" id="usuario" name="user" aria-describedby="usuario">
                </div>
                <div class="form-group col-12 col-md-6">
                    <label for="Correo">Correo</label>
                    <input type="email" value="<%=userval.email%>" required class="form-control" id="Correo" name="email" aria-describedby="Correo">
                </div>
                <div class="form-group col-12 col-md-6">
                    <label for="contra">Contrase;a</label>
                    <input type="password" value="<%=userval.pass%>" required class="form-control" id="contra" name="pass" aria-describedby="contra">
                </div>
                <div class="form-group col-12 col-md-6">
                    <label for="contrarepeat">Repetir Contrase;a</label>
                    <input type="password" value="<%=userval.pass2%>" class="form-control" required id="contrarepeat" name="pass2" aria-describedby="contrarepeat">
                </div>
                <div class="form-check col-12 col-md-6">
                    <input class="form-check-input" type="checkbox" id="con" name="con" value="yes">
                    <label class="form-check-label" for="con">
                  Aceptar los terminos y condiciones.
                </label>
                </div>
                <div class="col-12">
                    <h6 id="ErorMensaje" style="color: red;">
                        <%=resul%>
                    </h6>
                </div>
                <input type="submit" value="Crear Cuenta" class="btn btn-lg btn-success col-12 col-md-3">

                <div class="col-12 mt-1">
                    <div class="row justify-content-start mb-1">
                        <a href="/login" class="btn btn-outline-danger col-12 col-md-3">Ya tengo cuenta iniciar session</a>
                    </div>
                </div>
            </form>
        </div>
        <!-- Site footer -->
        <footer class="site-footer" style="height: 50px;">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-sm-6 col-xs-12">
                        <p class="copyright-text">Copyright &copy; 2020 All Rights Reserved by
                            <a href="https://www.edgarevaristo.ml" target="none">Evaristo</a>.
                        </p>
                    </div>

                </div>
            </div>
        </footer>
        <% include partials/footer %>